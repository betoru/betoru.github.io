    <span class="n">bos</span><span class="o">.</span><span class="na">write</span><span class="o">(</span><span class="n">bis</span><span class="o">.</span><span class="na">read</span><span class="o">());</span>
<span class="o">}</span>

<span class="nc">System</span><span class="o">.</span><span class="na">out</span><span class="o">.</span><span class="na">printf</span><span class="o">(</span><span class="s">"ì´ %,dë°”ì´íŠ¸ ë³µì‚¬ë¨\n"</span><span class="o">,</span> <span class="n">len</span><span class="o">);</span>

<span class="n">bos</span><span class="o">.</span><span class="na">flush</span><span class="o">();</span>
